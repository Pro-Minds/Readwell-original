{
  "compilerOptions": {
    "target": "es6",                 // Targets modern JavaScript syntax
    "module": "commonjs",            // Module system for Node.js and tools like Webpack
    "jsx": "react",                  // JSX syntax support for React
    "esModuleInterop": true,         // Ensures compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,                  // Enables all strict type-checking options
    "skipLibCheck": true,            // Skips type checking of declaration files
    "moduleResolution": "node",      // Helps TypeScript understand module resolution strategy
    "resolveJsonModule": true,       // Allows importing JSON files
    "noEmit": true,                  // Prevents TypeScript from emitting output files
    "isolatedModules": true,         // Ensures all files are treated as independent modules
    "baseUrl": "./src",              // Base directory for resolving non-relative module names
    "paths": {
      "@/*": ["*"]                 // Simplifies import paths
    }
  },
  "include": ["src"],                // Specifies the directory to include in the compilation
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"] // Excludes test files and node_modules
}
